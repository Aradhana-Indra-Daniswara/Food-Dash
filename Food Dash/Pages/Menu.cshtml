@page
@model Food_Dash.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}
<link rel="stylesheet" href="~/css/Menu.css" />
<div class="container">
    <div class="menu_header">
        <h1>Menu</h1>
        <a asp-page="./CreateMenu" class="addButton"><p>Add Menu</p></a>
    </div>
    <div class="tableheader table">
        <div class="col-1">
            <p>Name</p>
        </div>
        <div class="col-2">
            <p>Price</p>
        </div>
        <div class="col-3">
            <p>Options</p>
        </div>
    </div>
    @foreach(var menu in Model.Menus){
        <div class="tabledata table">
            <div class="col-1">
                <p>@menu.Name</p>
            </div>
            <div class="col-2">
                <p>@menu.Price</p>
            </div>
            <div class="col-3">
                <form method="post">
                    <a asp-page="./EditMenu" asp-route-id="@menu.Name" class="editButton actionButton">Edit</a>
                    <input type="submit" value="Delete" class="deleteButton actionButton"/>
                    <input type="hidden" name="ID" value="@menu.Name" />
                </form>
            </div>
        </div>
    }
</div>
